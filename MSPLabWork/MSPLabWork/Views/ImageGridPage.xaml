<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSPLabWork.Views.ImageGridPage"
             xmlns:views="clr-namespace:MSPLabWork.Views">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddButtonClicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <views:ImageGridLayout Margin="10" x:Name="ImageLayout" HorizontalOptions="FillAndExpand">

                </views:ImageGridLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>