<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MSPLabWork.ViewModels"
             xmlns:v="clr-namespace:MSPLabWork.Views"
             x:Class="MSPLabWork.Views.MoviesListPage">
    <ContentPage.BindingContext>
        <vm:MoviesListViewModel/>
    </ContentPage.BindingContext>
    <ListView x:Name="MoviesListView"
            HasUnevenRows="True"
            ItemTapped="Handle_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <v:MovieCell Title="{Binding Title}" Year="{Binding Year}" Type="{Binding Type}" Poster="{Binding Poster}" ImdbId="{Binding ImdbID}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
